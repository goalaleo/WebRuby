<p id="notice"><%= notice %></p>

<h2><%="#{@beer_club.name} #{@beer_club.city}"%> </h2>

<p>
  <%="Founded #{@beer_club.founded}" %>
</p>


<%if @beer_club.members.empty?%>
    <p>the club has no members</p>
<% else %>
    <h3>members</h3>

    <ul>
      <% @beer_club.members.each do |member| %>
          <li> <%= member.username  %></li>
      <% end %>
    </ul>
<% end %>

<td><%= link_to('Edit', edit_beer_club_path(@beer_club)) unless current_user.nil? %></td></br>
<td><%= link_to('Destroy the club', @beer_club, method: :delete, data: { confirm: 'Are you sure?' }) unless current_user.nil? %></td>
